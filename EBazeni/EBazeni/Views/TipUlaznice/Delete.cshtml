@model TipUlaznice

@{
    var title = $"Obriši {Model.Ime}";
}

@{
    ViewData["Title"] = title;
}

<form method="post" asp-action="Delete">
    <div class="p-3">
        <input asp-for="Id" hidden />
        <div class="form-group row">
            <h2 class="text-danger pl-3">Jeste li sigurni da želite obrisati @Model.Ime ? </h2>
        </div>
        <div class="row pt-4">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Ime"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Ime" disabled class="form-control" />
                        <span class="text-danger" asp-validation-for="Ime"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MaksimalanBrojKorisnika"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MaksimalanBrojKorisnika" disabled class="form-control" />
                        <span class="text-danger" asp-validation-for="MaksimalanBrojKorisnika"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Cijena"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Cijena" disabled class="form-control" />
                        <span class="text-danger" asp-validation-for="Cijena"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            @if (Model.Id == 0) {
                                <input type="submit" class="btn btn-default" value="@title" />
                            }
                            else {
                                <input type="submit" class="btn btn-danger w-100" value="Obriši" />
                            }
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> &nbsp Povratak</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="col-4"></div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}