@model IEnumerable<TipZaposlenika>

@{
    ViewData["Title"] = "Tipovi zaposlenika";
}

<link rel="stylesheet" href="~/css/UserManagement.css" />

@if (Model.Count() != 0) {
    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2>Tipovi zaposlenika</h2>
                        </div>
                        <div class="col-sm-6">
                            <a asp-action="Upsert" class="btn btn-default"><i class="fas fa-plus"></i> Dodaj novi tip zaposlenika</a>
                        </div>
                    </div>
                </div>
                <table class="table" style="color: lightgray;">
                    <thead style="color: white;">
                        <tr style="background: #050323;">
                            <th style="border: none">Tip zaposlenika</th>
                            <th style="border: none"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model) {
                            <tr>
                                <td style="border: none">@obj.Naziv</td>
                                <td style="border: none; text-align: right;">
                                    <a asp-action="Upsert" asp-route-Id="@obj.Id" class="edit"><i class="fas fa-edit custom-icon-edit"></i></a>
                                    <a asp-action="Delete" asp-route-Id="@obj.Id" class="delete"><i class="fas fa-trash custom-icon-trash"></i></a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

}

else {
    <p class="text-info mt-2">Nemate dodan niti jedan tip zaposlenika</p>
}

