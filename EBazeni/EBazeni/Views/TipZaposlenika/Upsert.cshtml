@model TipZaposlenika

@{ 
    var title = "Kreiraj novi tip zaposlenika";
} 

@if (Model.Id != 0) {
    title = $"Uredi {Model.Naziv}";
    <input hidden asp-for="Id" />
}

@{
    ViewData["Title"] = title;
}

<form method="post" asp-action="Upsert">
    <div class="p-3">
        
            <div class="form-group row">
                <h2 class="text pl-3" style="color: white">@title</h2>
            </div>
            <div class="row pt-4">
                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Naziv"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Naziv" class="form-control" />
                            <span class="text-danger" asp-validation-for="Naziv"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-4 row">
                            <div class="col">
                                @if (Model.Id == 0) {
                                    <input type="submit" class="btn btn-default w-100" value="Dodaj novi tip zaposlenika" />
                                }
                                else {
                                    <input type="submit" class="btn btn-default w-100" value="Uredi" />
                                }
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn text-light w-100" style="background: #3f43f1"><i class="fas fa-sign-out-alt"></i> &nbsp Povratak</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="col-4"></div>
</form>

@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
}