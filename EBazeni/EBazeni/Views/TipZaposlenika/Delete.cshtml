@model TipZaposlenika

@{
    var title = $"Obriši {Model.Naziv}";
}

@{
    ViewData["Title"] = title;
}

<form method="post" asp-action="Delete">
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-danger pl-3">Jeste li sigurni da želite obrisati @Model.Naziv ?</h2>
        </div>
        <div class="row pt-4">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Naziv"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Naziv" class="form-control" />
                        <span class="text-danger" asp-validation-for="Naziv"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Obriši" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> &nbsp Povratak</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="col-4"></div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}