@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<link rel="stylesheet" href="~/css/Login.css" />
<div class="row">
    <div class="col-12">

        <div class="wrapper">
            <div id="formContent">
                <!-- Tabs Titles -->
                <!-- Icon -->
                <div class="first">
                    <img src="~/img/static/user.png" id="icon" alt="User Icon" />
                </div>

                <!-- Login Form -->
                <form method="post" id="account">
                    <div class="form-group">
                        <label asp-for="Input.Username"></label>
                        <input asp-for="Input.Username" class="form-control first" />
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control first" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default">Log in</button>
                    </div>
                    @*<button type="submit" class="btn btn-default" value="Prijava"></button>*@
                </form>

                <!-- Remind Passowrd -->
                <div id="formFooter">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Zaboravili ste lozinku?</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Ponovno pošalji e-mail potvrdu računa</a>
                    </p>

                </div>

            </div>
        </div>

    </div>


    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
