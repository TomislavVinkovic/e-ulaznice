@page
@model EBazeni.Areas.Identity.Pages.Account.Manage.DisableUserAdminModel

@{
    Layout = "../../../../../Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col">
        <h1 class="text-primary">Brisanje ili onemogućenje pristupa</h1>
    </div>
</div>

<div class="row pt-4">
    <div class="col">
        <p class="text-danger">Jeste li sigurni da želite obrisati/onemogućiti pristup ovom korisniku? Ova akcija ne može se poništiti</p>
    </div>
</div>

<form method="post">
    <span>@Html.ValidationSummary()</span>
    <div class="form-group row">
        <div class="col-4">
            <label asp-for="Input.Delete"></label>
        </div>
        <div class="col-8">
            <input id="DeleteCheck" onclick="toggleDateInput()" asp-for="Input.Delete" />
            <span asp-validation-for="Input.Delete" class="form-check"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-4">
            <label asp-for="Input.OnemogucenjePristupa"></label>
        </div>
        <div class="col-8">
            <input id="DateInput" asp-for="Input.OnemogucenjePristupa" class="form-control" />
            <span asp-validation-for="Input.OnemogucenjePristupa" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-8 offset-4 row">
            <div class="col">
                <input type="submit" class="btn btn-danger w-100" value="Potvrdi" />
            </div>
            <div class="col">
                <a asp-controller="UserManager" asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out"></i> Povratak</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />


    <script>
        function toggleDateInput() {
            if (document.getElementById("DeleteCheck").value === true) {
                document.getElementById("DateInput").enabled = false;
            }
            else {
                document.getElementById("DateInput").enabled = true;
            }
        }
    </script>
}
